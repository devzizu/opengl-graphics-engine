			    </group>

			</group>

		</group>

    	<group>

    		<group>

		    	<translate X="100" Z="-100" Y="-16"/>

		    	<rotate time="10" axisY="1"/>

		    	<group>
	
		    		<scale X="20" Y="20" Z="20" />
		
			        <models>
			            <model file="sphere.3d.indexed"
			            	   diffR="1" diffG="1" diffB="0"/>
			        </models>

			    </group>

			</group>
	

    		<group>

		    	<translate X="100" Z="-100" Y="40"/>

		    	<rotate time="10" axisY="1"/>

